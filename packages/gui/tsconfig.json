{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitUseStrict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            // "*": ["src/types/*"],
            "@emotion/core": ["sink.d.ts"]
        },
        "sourceRoot": "src",
        "outDir": "dist",
        "jsx": "react",
        "declaration": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "types": [],
    "exclude": ["node_modules", "**/node_modules/*", "dist", "types", "modules", "trash"]
}
