{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitUseStrict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": ["src/types/*"]
        },
        "sourceRoot": "src",
        "outDir": "dist",
        "jsx": "react",
        "declaration": true,
        "skipLibCheck": true
    },
    "types": ["node"],
    "exclude": ["node_modules", "**/node_modules/*", "dist", "Types", "trash"]
}
